<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReplyActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.63">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/blackbold"
                android:gravity="center"
                android:text="제목"
                android:textColor="@android:color/primary_text_light_nodisable"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/read_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:fontFamily="@font/blacknorm"
                android:text="TextView" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/blackbold"
                android:gravity="center"
                android:text="카테고리"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/read_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:fontFamily="@font/blacknorm"
                android:text="TextView" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:background="#6495F7"
            android:fontFamily="@font/blackbold"
            android:gravity="center"
            android:text="내용"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/read_contents"
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:background="#336495F7"
            android:fontFamily="@font/blacknorm"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:background="#6495F7"
            android:fontFamily="@font/blackbold"
            android:gravity="center"
            android:text="답변"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/write_reply"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:background="#336495F7"
            android:ems="10"
            android:fontFamily="@font/blacknorm"
            android:gravity="start|top"
            android:hint="답변을 입력하세요."
            android:inputType="textMultiLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_back"
                android:fontFamily="@font/blacknorm"
                android:onClick="onClickSend"
                android:text="전송"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_back"
                android:fontFamily="@font/blacknorm"
                android:onClick="onClickCancel"
                android:text="취소"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>